<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>


<%= form_with(model: [ @company, @employee ]) do |form| %>
  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :email %>
  </div>

  <div class="field">
    <%= form.label :area_id %>
    <%= form.select :area_id, Area.pluck(:name, :id) %>
  </div>

  <%= form.hidden_field :company_id, value: @company.id %>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>



<h1>Company: <%= @company.name %> </h1>
<h2>Employees</h2>
<table class="table">
  <tr>
    <th>first_name</th>
    <th>last_name</th>
    <th>email</th>
    <th>area_id</th>
  </tr>
  <% @company.employee.each do |p| %>
    <tr>
      <td><%= p.first_name %></td> 
      <td><%= p.last_name %></td> 
      <td><%= p.email %></td> 
      <td><%= p.area.name %></td> 
    </tr> 
  <% end %>
</table>